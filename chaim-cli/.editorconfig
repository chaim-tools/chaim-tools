root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kotlin,gradle,gradle.kts}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{md,txt}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2
