{
  "name": "chaim-examples-java",
  "version": "1.0.0",
  "description": "Complete Chaim workflow example: schema → CDK → Java SDK → application",
  "main": "index.js",
  "scripts": {
    "synth": "cdk synth",
    "synth:products": "cdk synth ProductCatalogStack",
    "deploy": "cdk deploy",
    "deploy:products": "cdk deploy ProductCatalogStack",
    "destroy": "cdk destroy",
    "destroy:products": "cdk destroy ProductCatalogStack",
    "list": "cdk list",
    "diff": "cdk diff",
    "workflow": "./scripts/synth-and-generate.sh",
    "workflow:products": "./scripts/synth-and-generate.sh ProductCatalogStack com.acme.products",
    "generate": "node ../chaim-cli/dist/index.js generate",
    "generate:products": "node ../chaim-cli/dist/index.js generate --stack ProductCatalogStack --package com.acme.products --output ./generated-sdks",
    "validate": "node ../chaim-cli/dist/index.js validate",
    "validate:products": "node ../chaim-cli/dist/index.js validate schemas/product-catalog.bprint",
    "test": "./scripts/test-end-to-end.sh",
    "test:local": "node test-api.js",
    "test:client": "node test-client.js"
  },
  "keywords": [
    "chaim",
    "aws",
    "cdk",
    "java",
    "sdk",
    "dynamodb",
    "code-generation",
    "schema-driven",
    "example"
  ],
  "author": "Chaim Builder Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@chaim-tools/cdk-lib": "^0.1.11",
    "aws-cdk-lib": "^2.235.0",
    "constructs": "^10.4.4",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "resolutions": {
    "constructs": "^10.4.4",
    "aws-cdk-lib": "^2.235.0"
  },
  "optionalDependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
